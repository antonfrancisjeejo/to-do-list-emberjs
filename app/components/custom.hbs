<div class='container'>
  <h1>To Do List</h1>

  <div>
    <input type='text' onchange={{this.onChange}} value={{this.input}} />
    <button {{on 'click' this.addItem}}>Add</button>
  </div>

  <ul>
    {{#each this.items as |item index|}}
      <li {{on 'click' (fn this.deleteItem index)}}>{{item}}</li>
    {{/each}}
  </ul>
</div>